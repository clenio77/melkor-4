# Configurações do Kermartin 3.0 (exemplo)

# Django
SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database PostgreSQL
DB_NAME=kermartin_dev
DB_USER=kermartin_user
DB_PASSWORD=kermartin_pass
DB_HOST=localhost
DB_PORT=5432

# OpenAI API
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=800

# Limites de segurança/processing
SECURITY_MAX_CONTENT_LENGTH=300000
CHUNK_SIZE_CHARS=8000
CHUNK_OVERLAP_CHARS=600
OPENAI_RETRY_MAX_ATTEMPTS=8
OPENAI_RETRY_BASE_DELAY_SEC=1.5
OPENAI_CHUNK_SLEEP_SEC=1.0

# Redis
REDIS_URL=redis://localhost:6379/0

# Ambiente
ENVIRONMENT=development

# SerpAPI
SERPAPI_API_KEY=

