# Kermartin 3.0 - Exemplo de variáveis de ambiente

# Django
SECRET_KEY=kermartin-dev-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI (obrigatório para IA)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000

# Banco de dados (opcional em dev; default SQLite)
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=

# Redis (cache)
REDIS_URL=redis://localhost:6379/0

# CORS (origens permitidas do frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Jurisprudência / RAG (opcionais)
JURIS_GRAPH_ENABLED=false
JURIS_RETRIEVAL_PROVIDER=simple
JURIS_GRAPH_URL=bolt://localhost:7687
JURIS_GRAPH_USER=neo4j
JURIS_GRAPH_PASSWORD=
JURIS_GRAPH_TIMEOUT_MS=2000
JURIS_RAG_VECTOR_STORE=pgvector
JURIS_RAG_TOPK=8
