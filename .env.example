# Configurações do Kermartin 3.0 (exemplo)

# Django
SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database PostgreSQL
DB_NAME=kermartin_dev
DB_USER=kermartin_user
DB_PASSWORD=kermartin_pass
DB_HOST=localhost
DB_PORT=5432

# OpenAI API
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=800

# Limites de segurança/processing
SECURITY_MAX_CONTENT_LENGTH=300000
CHUNK_SIZE_CHARS=8000
CHUNK_OVERLAP_CHARS=600
OPENAI_RETRY_MAX_ATTEMPTS=8
OPENAI_RETRY_BASE_DELAY_SEC=1.5
OPENAI_CHUNK_SLEEP_SEC=1.0

# Redis
REDIS_URL=redis://localhost:6379/0

# Ambiente
ENVIRONMENT=development

# SerpAPI
SERPAPI_API_KEY=



# --- GraphRAG / Jurisprudência ---
JURIS_GRAPH_ENABLED=false
JURIS_RETRIEVAL_PROVIDER=simple
JURIS_GRAPH_URL=bolt://localhost:7687
JURIS_GRAPH_USER=neo4j
JURIS_GRAPH_PASSWORD=
JURIS_GRAPH_TIMEOUT_MS=2000
JURIS_RAG_VECTOR_STORE=pgvector
JURIS_RAG_TOPK=8
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
